<div class="container wide-container py-5">
	<section class="pb-5">
		<ul id="da-thumbs" class="da-thumbs row simple-cards py-5 mx-1 mx-md-0 px-0">
			@foreach (var cards in @Model.SimpleCards)
			{
				var card = new SimpleCard(cards);
				<li class="col-12 col-md-4 p-0">
					<a class="@card.BackgroundColor.Label-bg">
						<img src="@card.Image.Url" alt="@Path.GetFileNameWithoutExtension(@card.Image.Url).Replace("-", " ")" />
						<h5 class="px-3 @card.TitleColor.Label-text">@card.Title</h5>
						<p class="mb-5 mb-md-0 px-3 pt-3 pb-md-4 @card.ParagraphColor.Label-text paragraph">
							@card.Paragraph
						</p>
						<div class="static-cont @card.InvertedBackgroundColor.Label-bg">
							<img src="@card.Image.Url" alt="@Path.GetFileNameWithoutExtension(@card.Image.Url).Replace("-", " ")" />
							<h5 class="px-3 @card.InvertedTitleColor.Label-text">@card.Title</h5>
							<p class="mb-5 mb-md-0 px-3 pt-3 pb-md-4 @card.InvertedParagraphColor.Label-text paragraph">
								@card.Paragraph
							</p>
						</div>
					</a>
				</li>
			}
		</ul>
	</section>
</div>

<!-- / Cards section -->
<!-- Image-image section -->
<section class="container @Model.ImageContainerType  image-image-section box-shadow-2">
	<div class="row">
		<div class=" @(@Model.Position == "left" ? "order-0" : "order-1" ) col-12 col-md-12 @(Model.WiderSmallColumn ? "col-xl-4": "col-xl-3") py-xl-3 px-xl-5  @Model.SmallTextBackgroundColor.Label-bg small-column">
			<div class="row">
				@if (@Model.SmallColumnImage != null)
				{
					<div class="col-3 col-xl-12 p-0 my-auto d-flex">
						<img class="mx-auto pb-3" src="@Model.SmallColumnImage.Url" />
					</div>
				}
				<div class="px-5 py-3 px-xl-0 @(@Model.SmallColumnImage != null ? "col-9 col-xl-12" : "col-12") ">
					<h5 class="@Model.SmallColumnTitleColor.Label-text">@Model.SmallColumnTitle</h5>
					<div class="@Model.SmallColumnTextColor.Label-text">@Model.SmallColumnText</div>
				</div>
			</div>
		</div>
		<div class=" @(@Model.Position == "left" ? "order-1" : "order-0" ) col-12 col-md-12  @(Model.WiderSmallColumn ? "col-xl-8": "col-xl-9") step-image @Model.Background.Label-bg">
			<div class="row">
				<div class="col-12 col-md-6 col-xl-8 big-image py-3  @(@Model.Position == "left" ? "order-1" : "order-0")">
					<img src="@Model.BigImage.Url" />
				</div>
				<div class="col-12 col-md-6 col-xl-4 @(@Model.Position == "left" ? "order-0" : "order-1") px-5  @(@Model.Position == "left" ? " pr-xl-3 pl-xl-5" : " pl-xl-3 pr-xl-5")">
					<h5 class="step-title py-4 @Model.TitleColor.Label-text">
						@Model.SectionTitle
					</h5>

					<div class="step-text white-text pb-4 @Model.TextColor.Label-text">
						@Model.Text
					</div>
				</div>
			</div>
		</div>
	</div>
</section>
<!-- / Image-image section -->
<!-- / Nav cards -->
<section class="container">
	<div class="card-deck mb-3 pt-5 text-center">
		@if (Model.NavigationCards.Any())
		{
			foreach (var cards in @Model.NavigationCards)
			{
				@Html.Partial("NavigationCards", new NavCard(cards));
			}
		}
	</div>
</section>
<!-- / Nav cards -->