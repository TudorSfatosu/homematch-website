@inherits Umbraco.Web.Mvc.UmbracoViewPage<ContentModels.RelocationSubpage2>
@using ContentModels = Umbraco.Web.PublishedModels;
@{
	Layout = "master.cshtml";
}

@Html.Partial("SideButton")

@Html.Partial("SimpleBanner")

<!-- Intro section -->
<section class="container wide-container">
	@if (@Model.Button1Link != null)
	{
		<div class="row pt-5 pb-2">
			<div class="col-12 text-center">
				<h1 class="blue-text heavy-text">@Model.H1</h1>
			</div>
		</div>

	}

	@if (@Model.IntroText != null)
	{
		<div class="row pt-2 pb-3">
			@if (@Model.PageIcon != null)
			{
				<div class="col-1 text-center">
					<img class="page-icon d-none d-lg-block" src="@Model.PageIcon.Url" width="100" alt="@Path.GetFileNameWithoutExtension(@Model.PageIcon.Url).Replace("-", " ")" />
				</div>
			}
			<div class="col-10 text-center">
				<h4 class="blue-text">@Model.IntroText</h4>
			</div>
		</div>
	}

	@if (@Model.IntroSubtext.Any() && @Model.IntroSubtext != null)
	{
		<div class="row pt-3 p-5">
			<div class="col-12 text-center">
				<h5 class="text-muted">@Model.IntroSubtext</h5>
			</div>
		</div>
	}

	@if (@Model.Button1Link != null)
	{
		<div class="row">
			<div class="my-0 mx-auto py-5">
				<a href="@Model.Button1Link" class="btn btn-md btn-block btn-blue">@Model.Button1Text</a>
			</div>
		</div>
	}

</section>
<!-- / Intro section -->
<!-- List-image section -->
<section class="fluid-container px-4 px-xl-5 @Model.BackgroundColor.Label-bg list-image-section">
	<div class="container @Model.ListContainerType">
		<div class="row mb-5">
			<div class="@(@Model.ImagePosition == "left" ? "order-1 order-xl-1" : "order-1 order-xl-0" ) col-12 col-xl-4 p-3">
				@if (@Model.Title != null)
				{
					<h5 class="step-title py-4 @Model.ListTitleColor.Label-text">
						@Model.Title
					</h5>
				}
				@if (Model.Bullets != null && Model.Bullets.Any())
				{
					<ul class="step-bullets pl-5 @Model.BulletsColor.Label-text">
						@foreach (var bullets in Model.Bullets)
						{
							var bullet = new Bullets(bullets);

							if (@bullet.BulletText != null)
							{
								<li class="step-bullet pb-3">
									@bullet.BulletText
								</li>
							}

						}
					</ul>
				}
				else
				{
					<div class="@Model.BulletsColor.Label-text">
						@Model.ListReplacement
					</div>
				}
			</div>
			<div class="@(@Model.ImagePosition == "left" ? "order-0 order-xl-0" : "order-0 order-xl-1" ) col-12 col-xl-8 step-image my-1 my-lg-4" style="background: url(@Model.Image.Url)">
			</div>
		</div>
	</div>
</section>
<!-- / List-image section -->
